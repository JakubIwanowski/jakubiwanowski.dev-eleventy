---json
{
    "permalink": "/garden/paths.rss",
    "eleventyExcludeFromCollections": true,
    "metadata": {
      "title": "jakubiwanowski.dev",
      "subtitle": "The Digital Garden of Jakub Iwanowski",
      "language": "en",
      "url": "https://jakubiwanowski.dev/",
      "author": {
        "name": "Jakub Iwanowski",
        "email": "jakubiwanowski@tutanota.com"
      }
    }
  }
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:dc="http://purl.org/dc/elements/1.1/" xml:base="{{ metadata.url }}" xmlns:atom="http://www.w3.org/2005/Atom">
<channel>
<title>{{ metadata.title }}</title>
 <link>{{ metadata.url }}</link>
      <atom:link href="{{ permalink | absoluteUrl(metadata.url) }}" rel="self" type="application/rss+xml" />
      <description>{{ metadata.subtitle }}</description>
      <language>{{ metadata.language }}</language>
      {%- for plant in collections.plants | reverse %}
      {%- set absolutePostUrl = plant.url | absoluteUrl(metadata.url) %}
      <item>
        <title>{{ plant.data.title }}</title>
        <link>{{ absolutePostUrl }}</link>
        <description>{{ plant.templateContent | htmlToAbsoluteUrls(absolutePostUrl) }}</description>
        <pubDate>{{ plant.date }}</pubDate>
        <dc:creator>{{ metadata.author.name }}</dc:creator>
        <guid>{{ absolutePostUrl }}</guid>
      </item>
      {%- endfor %}
    </channel>
  </rss>
